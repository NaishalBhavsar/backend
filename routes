const express = require('express');
const { register, login } = require('../controllers/authController');
const validate = require('../middleware/validation');
const Joi = require('joi');
const router = express.Router();

router.post('/register', validate(Joi.object({ name: Joi.string().required(), email: Joi.string().email().required(), password: Joi.string().min(6).required(), role: Joi.string().valid('user', 'admin') })), register);
router.post('/login', validate(Joi.object({ email: Joi.string().email().required(), password: Joi.string().required() })), login);

module.exports = router;
